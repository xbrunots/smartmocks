<style>
    .navbar-console {
        display: inline-flex;
        padding-top: 20px;
        padding-bottom: 20px;
        right: 0px;
        top: 45px;
        padding-left: 20px;
        width: auto;
        width: 100%;
        background: #f2f2f2;
        padding-bottom: 35px;
    }

    .navbar-console>span {
        display: flex;
        font-size: 15px;
        font-weight: 600;
        color: #00000061;
        margin-right: 10px;
    }

    .navbar-console>.spanRight {
        position: absolute;
        right: 0px;
        padding-right: 40px;
    }

    .navbar-console>span>img {
        height: 20px;
        filter: sepia(100%) saturate(300%) brightness(70%) hue-rotate(180deg);

    }

    .navbar-console>i {
        display: flex;
        align-items: center;
        justify-content: center;
        color: #00000061;

    }

    .navbar-console>span>x-label {
        display: flex;
        color: #4d77c3;
    }

    .spanRight>x-button {
        background: white;
        border: 2px solid black;
        border-radius: 6px;
        font-weight: 900;
        cursor: pointer;
    }

    .spanRight>x-button>x-box>x-label {
        font-weight: 900;
    }

    .console-container {}

    body {
        width: 100% !important;
        padding-left: 0px !important;
        overflow: hidden;
    }

    :host([selected]) #selection-indicator {
        background: #000000 !important !important;
    }

    .console-serveles-body {
        padding-top: 120px;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    current-module {
        display: none;
        opacity: 0;
    }

    .nav-span-module>x-label {}
</style>
<div class="navbar-console">

    <span class="navbar-root">
        <x-label>apps</x-label>
    </span>
    <i class="fas fa-chevron-right"></i>
    <span style="margin-left:10px;" class="nav-span-app">
        <img src="/assets/rocketbase_logo_transparent.png">
        <x-label style="padding-left: 5px;">{{data.bundle}}</x-label>
    </span>

    <span class="nav-span-module">
        <i class="fas fa-chevron-right" style="    font-size: 12px;
    margin: 4px;margin-left: 0px;"></i>
        <x-label style="padding-left: 5px;">{{data.module}}</x-label>
    </span>

    <script>
        if ($(".nav-span-module>x-label").text() == "console") {
            $(".nav-span-module").css("display", "none");
        }
    </script>

    <span class="spanRight" style="float:right">
        <x-button tooltip="Cria uma instância de testes em Desenvolvimento" skin="nav">
            <x-box>
                <i class="fas fa-terminal"></i>
                <x-label>run dev</x-label>
            </x-box>
        </x-button>
        <x-button tooltip="Envia a versão atual para Produção" style="margin-left: 10px;" skin="nav">
            <x-box>
                <i class="fas fa-rocket"></i>
                <x-label>deploy</x-label>
            </x-box>
        </x-button>
    </span>

</div>

<script>
    $(document).ready(function () {

        $('.go-module').removeAttr("selected")
        $('[data-module="' + $('current-module').html().toLowerCase() + '"]').attr("selected", "true")
        $(document).on("pointerdown", ".go-module", function (e) {
            if (e.button == 0) {
                var module = window.location.search.replace("/", "") + "/" + $(this).attr('data-module')
                if (window.location.search.indexOf("/") != -1) {
                    module = window.location.search.split("/")[0] + "/" + $(this).attr('data-module')
                }

                window.location.href =
                    window.location.origin +
                    window.location.pathname + module

            }
        });
    });
    $('.console-serveles-body>h1').html($('current-module').html() + " temporariamente indisponível")

</script>
<div class="console-container">
    <x-doctabs skin="flat">
        <x-doctab class="go-module" data-module="management">
            <x-label>Management</x-label>
        </x-doctab>

        <x-doctab class="go-module" data-module="services">
            <x-label>Services</x-label>
        </x-doctab>

        <x-doctab class="go-module" data-module="remote-config">
            <x-label>Remote Config</x-label>
        </x-doctab>

        <x-doctab class="go-module" data-module="distribution">
            <x-label>Distribution</x-label>
        </x-doctab>

        <x-doctab class="go-module" data-module="push-center">
            <x-label>Push Center</x-label>
        </x-doctab>

        <x-doctab class="go-module" data-module="track-and-tag">
            <x-label>Track and Tag</x-label>
        </x-doctab>

        <x-doctab class="go-module" data-module="mock-server">
            <x-label>MockServer</x-label>
        </x-doctab>

        <x-doctab class="go-module" data-module="omini-gateway">
            <x-label>Omni Gateway</x-label>
        </x-doctab>

        <x-doctab class="go-module" data-module="data-snapshot">
            <x-label>DataSnapshot</x-label>
        </x-doctab>

        <x-doctab class="go-module" data-module="smartlinks">
            <x-label>Smartlinks</x-label>
        </x-doctab>
    </x-doctabs>
</div>